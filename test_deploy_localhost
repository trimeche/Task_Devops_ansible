name: deploy ansible

on:
  push:
    branches:
    - test
  pull_request:
    branches:
    - test

jobs:
  build:
    runs-on: [self-hosted, linux]
    steps:
    - name: checkout repo
      uses: actions/checkout@v2
    - name: Lint Ansible Playbook
      #uses: ansible/ansible-lint-action@master
      with:
        targets: ""
  deployAnsible:
    needs: build
    runs-on: [self-hosted, linux]
    steps:
    - uses: actions/checkout@v1
    - uses: ./.github/actions/ansible
      with: 
        playbook: ansible-playbook.yml
        inventory: localhost
